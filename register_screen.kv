ScreenManager:    LoginScreen:        name: "login"    SignupScreen:        name: "signup"    TaskManagerScreen:        name: "task_manager"    AddTaskScreen:        name: "add_task"<LoginScreen>:    FloatLayout:        # Background Image        Image:            source: "images/task_image.png"  # Ensure this path is correct            allow_stretch: True            keep_ratio: False            size_hint: 1, 1            pos_hint: {"center_x": 0.5, "center_y": 0.5}        # Login Form        BoxLayout:            orientation: "vertical"            size_hint: 0.8, 0.5            pos_hint: {"center_x": 0.5, "center_y": 0.5}            spacing: 10            Label:                text: "Task Manager"                font_size: "32sp"                bold: True                size_hint_y: None                height: self.texture_size[1]            MDTextField:                id: username_input                hint_text: "Enter Username"                mode: "rectangle"            MDTextField:                id: password_input                hint_text: "Enter Password"                password: True                mode: "rectangle"            MDRaisedButton:                text: "Login"                on_release:                    app.login(username_input.text, password_input.text)            MDRaisedButton:                text: "Sign Up"                on_release:                    app.root.current = "signup"<SignupScreen>:    BoxLayout:        orientation: "vertical"        padding: 20        spacing: 10        MDTextField:            id: signup_username_input            hint_text: "Enter Username"            mode: "rectangle"        MDTextField:            id: signup_password_input            hint_text: "Enter Password"            password: True            mode: "rectangle"        MDRaisedButton:            text: "Sign Up"            on_release:                app.signup(signup_username_input.text, signup_password_input.text)        MDRaisedButton:            text: "Back to Login"            on_release:                app.root.current = "login"<TaskManagerScreen>:    BoxLayout:        orientation: "vertical"        padding: 20        spacing: 10        # Search Bar        MDTextField:            id: search_input            hint_text: "Search tasks"            mode: "rectangle"            on_text: app.search_tasks(self.text)        # Category Buttons        BoxLayout:            orientation: "horizontal"            size_hint_y: None            height: self.minimum_height            spacing: 10            MDRaisedButton:                text: "All"                on_release: app.load_tasks()            MDRaisedButton:                text: "Completed"                on_release: app.filter_tasks_by_category("completed")            MDRaisedButton:                text: "Uncompleted"                on_release: app.filter_tasks_by_category("uncompleted")            MDRaisedButton:                text: "Due Soon"                on_release: app.filter_tasks_by_category("due_soon")            MDRaisedButton:                text: "Overdue"                on_release: app.filter_tasks_by_category("overdue")        # Add New Task Button        MDRaisedButton:            text: "Add New Task"            size_hint_y: None            height: 50            on_release: app.root.current = "add_task"        # Task List        ScrollView:            MDList:                id: task_list<AddTaskScreen>:    BoxLayout:        orientation: "vertical"        padding: 20        spacing: 10        MDTextField:            id: task_input            hint_text: "Enter Task"            mode: "rectangle"        MDTextField:            id: due_date_input            hint_text: "Enter Due Date (YYYY-MM-DD)"            mode: "rectangle"        BoxLayout:            orientation: "horizontal"            size_hint_y: None            height: self.minimum_height            spacing: 10            MDRaisedButton:                text: "Cancel"                on_release: app.root.current = "task_manager"            MDRaisedButton:                text: "Save Task"                on_release:                    app.add_task(task_input.text, due_date_input.text)                    app.root.current = "task_manager"